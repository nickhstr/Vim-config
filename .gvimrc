" Font
set guifont=Roboto\ Mono\ for\ Powerline:h14

" Colorscheme
colorscheme hybrid_material
hi NonText guifg=#282A2E guibg=#282A2E
hi CursorLine guibg=#282A2E
hi CursorLineNr guifg=#3d3d3d guibg=#212121
hi LineNr guifg=#3d3d3d
hi VertSplit guifg=#282A2E guibg=#282A2E
hi Normal guibg=#282A2E
hi Comment guifg=#555555 gui=italic
hi Statement gui=bold
hi Type gui=bold

" GUI Options
set guioptions=egm

" Airline Options
let g:airline_theme = 'base16_google'

